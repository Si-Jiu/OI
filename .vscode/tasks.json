{
  "tasks": [
    {
      "type": "shell",
      "label": "Build C++",
      "command": "clang++",
      "args": [
        "${file}",
        "--target=x86_64-w64-windows-gnu",
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-std=c++20",
        "-o",
        "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
